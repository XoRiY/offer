				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"status\", \r",
							"    function(){\r",
							"        pm.response.to.have.status(201)\r",
							"    }\r",
							")\r",
							"\r",
							"pm.test(\"body\", () => {\r",
							"    //parse the response json and test three properties\r",
							"    const responseJson = pm.response.json();\r",
							"    pm.expect(responseJson.id).to.be.not.null;\r",
							"    pm.expect(responseJson.id > 0 ).to.true;\r",
							"    pm.expect(responseJson.name).to.eql('tahar');\r",
							"    pm.expect(responseJson.birthDate).to.eql('01-01-1987');\r",
							"    pm.expect(responseJson.countryOfResidence).to.eql('France');\r",
							"    pm.expect(responseJson.phoneNumber).to.eql('0678901234');\r",
							"    pm.expect(responseJson.gender).to.eql('Male');\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
